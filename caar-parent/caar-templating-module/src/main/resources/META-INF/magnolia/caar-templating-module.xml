<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>caar-templating-module</name>
  <displayName>${project.name}</displayName>
  <description>${project.description}</description>
  <class>es.arquia.magnolia.CaarTemplatingModule</class>
  <versionHandler>es.arquia.magnolia.setup.CaarTemplatingModuleVersionHandler</versionHandler>
  <version>${project.version}</version>
  
	<components>
		<id>main</id>
		<component>
			<type>es.arquia.magnolia.manager.NewsManager</type>
			<implementation>es.arquia.magnolia.manager.NewsManagerImpl</implementation>
		</component>
		<component>
			<type>es.arquia.magnolia.manager.ArchitectureFilesSupportEventManager</type>
			<implementation>es.arquia.magnolia.manager.ArchitectureFilesSupportEventManagerImpl</implementation>
		</component>
		<component>
			<type>es.arquia.magnolia.manager.AwardManager</type>
			<implementation>es.arquia.magnolia.manager.AwardManagerImpl</implementation>
		</component>
		<component>
			<type>es.arquia.magnolia.utils.breadcrumb.award.UtilsBreadcrumbAward</type>
			<implementation>es.arquia.magnolia.utils.breadcrumb.award.UtilsBreadcrumbAwardImpl</implementation>
		</component>
		<component>
			<type>es.arquia.magnolia.functions.I18nURLFunctions</type>
			<implementation>es.arquia.magnolia.functions.I18nURLFunctionsImpl</implementation>
		</component>
		<component>
			<type>es.arquia.magnolia.templates.bean.ContextNewsNav</type>
			<implementation>es.arquia.magnolia.templates.bean.ContextNewsNavImpl</implementation>
		</component>
	</components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.6/*</version>
    </dependency>
    <dependency>
      <name>site</name>
      <version>1.2/*</version>
    </dependency>
    <!--  Add other dependencies here, e.g the mte (magnolia templating essentials).
    <dependency>
      <name>mte</name>
      <version>0.7/*</version>
    </dependency>
    -->
  </dependencies>
</module>
